<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.HelpdeskApp.Amanhecer" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/amanhecer_primary</item>
        <item name="colorPrimaryVariant">@color/amanhecer_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/amanhecer_accent</item>
        <item name="colorSecondaryVariant">@color/amanhecer_primary</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:windowBackground">@color/amanhecer_background</item>
        <item name="android:colorBackground">@color/amanhecer_background</item>
        <item name="colorSurface">@color/amanhecer_surface</item>

        <item name="android:textColorPrimary">@color/amanhecer_text</item>
        <item name="android:textColorSecondary">@color/amanhecer_text_secondary</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="cardBackgroundColor">@color/amanhecer_surface</item>
    </style>

    <style name="Theme.HelpdeskApp.Anoitecer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/anoitecer_primary</item>
        <item name="colorPrimaryVariant">@color/anoitecer_primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/anoitecer_accent</item>
        <item name="colorSecondaryVariant">@color/anoitecer_primary</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowBackground">@color/anoitecer_background</item>
        <item name="android:colorBackground">@color/anoitecer_background</item>
        <item name="colorSurface">@color/anoitecer_surface</item>

        <item name="android:textColorPrimary">@color/anoitecer_text</item>
        <item name="android:textColorSecondary">@color/anoitecer_text_secondary</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="cardBackgroundColor">@color/anoitecer_surface</item>
    </style>

    <style name="Theme.HelpdeskApp.Ancestral" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ancestral_primary</item>
        <item name="colorPrimaryVariant">@color/ancestral_primary_dark</item>
        <item name="colorOnPrimary">@color/ancestral_text</item>

        <item name="colorSecondary">@color/ancestral_accent</item>
        <item name="colorSecondaryVariant">@color/ancestral_gold</item>
        <item name="colorOnSecondary">@color/ancestral_background</item>

        <item name="android:windowBackground">@color/ancestral_background</item>
        <item name="android:colorBackground">@color/ancestral_background</item>
        <item name="colorSurface">@color/ancestral_surface</item>

        <item name="android:textColorPrimary">@color/ancestral_text</item>
        <item name="android:textColorSecondary">@color/ancestral_text_secondary</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/ancestral_primary_dark</item>

        <item name="cardBackgroundColor">@color/ancestral_surface</item>
    </style>

    <style name="Theme.HelpdeskApp" parent="Theme.HelpdeskApp.Amanhecer" />

    <style name="BotaoFiltroAtivo" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/botao_filtro_ativo</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="BotaoFiltroInativo" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@drawable/botao_filtro_inativo</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>
        <item name="strokeColor">@color/border_light</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="CardView.Amanhecer" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/amanhecer_surface</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="CardView.Anoitecer" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/anoitecer_surface</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="CardView.Ancestral" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/ancestral_surface</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

</resources>