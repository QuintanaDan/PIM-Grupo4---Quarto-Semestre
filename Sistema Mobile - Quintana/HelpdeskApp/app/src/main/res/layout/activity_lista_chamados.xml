<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Header com filtros -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- TÃ­tulo e contador -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ“‹ Meus Chamados"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark" />

                <TextView
                    android:id="@+id/tvContadorChamados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 chamados"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:background="@drawable/contador_background"
                    android:padding="6dp" />

            </LinearLayout>

            <!-- Filtros rÃ¡pidos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnFiltroTodos"
                    style="@style/BotaoFiltroAtivo"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="TODOS" />

                <Button
                    android:id="@+id/btnFiltroAbertos"
                    style="@style/BotaoFiltroInativo"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="ABERTOS" />

                <Button
                    android:id="@+id/btnFiltroAndamento"
                    style="@style/BotaoFiltroInativo"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="ANDAMENTO" />

                <Button
                    android:id="@+id/btnFiltroFechados"
                    style="@style/BotaoFiltroInativo"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="FECHADOS" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Lista de chamados -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvChamados"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:clipToPadding="false" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- FAB para novo chamado -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabNovoChamado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/primary"
        app:tint="@color/white" />

</LinearLayout>
