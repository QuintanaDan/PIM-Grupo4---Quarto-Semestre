                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    tools:text="Aguardando resposta..." />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- NOVA SEÃ‡ÃƒO: Tags -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
