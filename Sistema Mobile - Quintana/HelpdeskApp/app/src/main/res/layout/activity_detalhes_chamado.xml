<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".DetalheChamadoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Card com informações do chamado -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Título -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Título"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtTituloDetalhe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="Problema com impressora" />

                <!-- Descrição -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descrição"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDescricaoDetalhe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    tools:text="A impressora não está funcionando..." />

                <!-- Informações em linha -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Categoria"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtCategoriaDetalhe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp"
                            tools:text="Hardware" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Prioridade"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtPrioridadeDetalhe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp"
                            tools:text="Alta" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtStatusDetalhe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp"
                            tools:text="Aberto" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Data de Criação"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtDataDetalhe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp"
                            tools:text="25/10/2024" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Resposta -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Resposta"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtRespostaDetalhe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    tools:text="Aguardando resposta..." />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- NOVA SEÇÃO: Tags -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="@color/primary_light"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🏷️ Tags"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvAdicionarTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+ Adicionar Tags"
                        android:textSize="14sp"
                        android:textColor="@color/primary"
                        android:textStyle="bold"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp" />

                </LinearLayout>

                <!-- RecyclerView de Tags (Horizontal) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewTags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:padding="12dp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:itemCount="3"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:orientation="horizontal"
                    tools:listitem="@layout/item_tag" />

                <!-- Mensagem quando não há tags -->
                <TextView
                    android:id="@+id/tvSemTags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nenhuma tag adicionada"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:textAlignment="center"
                    android:padding="16dp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- NOVA SEÇÃO: Anexos -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header de Anexos -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="@color/primary_light"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="📎 Anexos"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvContadorAnexos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 anexos"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:background="@drawable/contador_background"
                        android:padding="6dp"
                        android:visibility="gone"
                        tools:visibility="visible" />

                </LinearLayout>

                <!-- RecyclerView de Anexos (Horizontal) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewAnexos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:padding="8dp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:itemCount="3"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:orientation="horizontal"
                    tools:listitem="@layout/item_anexo" />

                <!-- Botão Anexar Foto -->
                <Button
                    android:id="@+id/btnAnexarFoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📷 ANEXAR FOTO"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/primary"
                    android:layout_margin="12dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Seção de Comentários -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="💬 Histórico de Comentários"
                    android:textColor="@color/text_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="16dp"
                    android:background="@color/primary_light" />

                <!-- RecyclerView de comentários -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewComentarios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:padding="8dp" />

                <!-- Campo para adicionar comentário -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="@color/background_secondary">

                    <EditText
                        android:id="@+id/etNovoComentario"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Digite seu comentário..."
                        android:inputType="textMultiLine"
                        android:maxLines="3"
                        android:minHeight="48dp"
                        android:padding="12dp"
                        android:background="@drawable/edit_text_background"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btnEnviarComentario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📤"
                        android:textSize="20sp"
                        android:backgroundTint="@color/primary"
                        android:minWidth="56dp"
                        android:minHeight="56dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Botão Gerar PDF -->
        <Button
            android:id="@+id/btnGerarPDF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="📄 GERAR RELATÓRIO PDF"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#E91E63"
            android:paddingVertical="16dp" />

        <!-- Botão Avaliar -->
        <Button
            android:id="@+id/btnAvaliarChamado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_background"
            android:text="⭐ AVALIAR ATENDIMENTO"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:backgroundTint="@color/notification_success" />

        <!-- BOTÃO SUGESTÃO DE SOLUÇÃO IA -->
        <Button
            android:id="@+id/btnSugerirSolucaoIA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🤖 Sugerir Solução com IA"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:elevation="4dp" />

        <!-- CARD RESPOSTA DA IA -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardRespostaIA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🤖 Sugestão de Solução da IA"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="8dp" />

                <ProgressBar
                    android:id="@+id/progressBarIA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvRespostaIA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@color/text_primary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Botão Voltar -->
        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_background"
            android:text="⬅️ Voltar"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>