<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- NÃºmero do Chamado -->
        <TextView
            android:id="@+id/tvNumeroChamado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#HLP-001"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:textStyle="bold"
            tools:text="#HLP-001" />

        <!-- TÃ­tulo -->
        <TextView
            android:id="@+id/tvTituloChamado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TÃ­tulo do Chamado"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Problema com impressora HP" />

        <!-- Linha: Status e Prioridade -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <!-- Status -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvStatusChamado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aberto"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:layout_marginTop="2dp"
                    tools:text="Aberto" />
            </LinearLayout>

            <!-- Prioridade -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prioridade"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPrioridadeChamado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alta"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    android:layout_marginTop="2dp"
                    tools:text="Alta" />
            </LinearLayout>

        </LinearLayout>

        <!-- Data -->
        <TextView
            android:id="@+id/tvDataChamado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“… 10/10/2024 14:30"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="8dp"
            tools:text="ðŸ“… 10/10/2024 14:30" />

        <!-- OPCIONAL: RecyclerView de Tags -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTagsChamado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:nestedScrollingEnabled="false"
            android:visibility="gone"
            tools:visibility="visible"
            tools:itemCount="2"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:orientation="horizontal"
            tools:listitem="@layout/item_tag" />

    </LinearLayout>

</androidx.cardview.widget.CardView>