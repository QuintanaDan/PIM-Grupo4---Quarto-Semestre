<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_primary"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📊 Dashboard Administrativo"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visão geral do sistema em tempo real"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:alpha="0.9" />

        </LinearLayout>

        <!-- Cards Principais (Grid 2x3) -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:padding="16dp"
            android:layout_marginBottom="8dp">

            <!-- Card 1: Total Chamados -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTotalChamados"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#2196F3"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvTotalChamados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total de Chamados"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 2: Chamados Abertos -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardChamadosAbertos"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#4CAF50"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvChamadosAbertos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Abertos"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 3: Chamados Resolvidos -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardChamadosResolvidos"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#9C27B0"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvChamadosResolvidos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resolvidos"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 4: Chamados Hoje -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardChamadosHoje"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#FF9800"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvChamadosHoje"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hoje"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 5: Tempo Médio -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTempoMedio"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#00BCD4"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvTempoMedio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.5d"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tempo Médio"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 6: Avaliação Média -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAvaliacaoMedia"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#FFC107"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvAvaliacaoMedia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.5 ⭐"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avaliação Média"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>

        <!-- Seção: Top Categorias -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📂 Categorias Mais Frequentes"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    android:layout_marginBottom="12dp" />

                <!-- Top 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="🥇"
                        android:textSize="20sp"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/tvCategoriaTop1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hardware"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_dark" />

                        <TextView
                            android:id="@+id/tvCategoriaCount1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15 chamados"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Top 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="🥈"
                        android:textSize="20sp"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/tvCategoriaTop2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Software"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_dark" />

                        <TextView
                            android:id="@+id/tvCategoriaCount2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 chamados"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Top 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="🥉"
                        android:textSize="20sp"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/tvCategoriaTop3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rede"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_dark" />

                        <TextView
                            android:id="@+id/tvCategoriaCount3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8 chamados"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Seção: Prioridades -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚡ Distribuição por Prioridade"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    android:layout_marginBottom="12dp" />

                <!-- Prioridade Baixa -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🟢"
                        android:textSize="20sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Baixa"
                        android:textSize="14sp"
                        android:textColor="@color/text_dark" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:background="#4CAF50"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvPrioridadeBaixa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 chamados"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

                <!-- Prioridade Média -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🟡"
                        android:textSize="20sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Média"
                        android:textSize="14sp"
                        android:textColor="@color/text_dark" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:background="#FF9800"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvPrioridadeMedia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12 chamados"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

                <!-- Prioridade Alta -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🔴"
                        android:textSize="20sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Alta"
                        android:textSize="14sp"
                        android:textColor="@color/text_dark" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:background="#FF5722"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvPrioridadeAlta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8 chamados"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

                <!-- Prioridade Crítica -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🆘"
                        android:textSize="20sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Crítica"
                        android:textSize="14sp"
                        android:textColor="@color/text_dark" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:background="#F44336"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvPrioridadeCritica"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 chamados"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Seção: Performance -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📈 Indicadores de Performance"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    android:layout_marginBottom="16dp" />

                <!-- Percentual Resolvidos -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Taxa de Resolução"
                            android:textSize="14sp"
                            android:textColor="@color/text_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chamados resolvidos vs total"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvPercentualResolvidos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="85%"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/border_light"
                    android:layout_marginVertical="8dp" />

                <!-- Taxa de Sucesso -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Taxa de Satisfação"
                            android:textSize="14sp"
                            android:textColor="@color/text_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avaliações 4+ estrelas"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvTaxaSucesso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="92%"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#FFC107" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>