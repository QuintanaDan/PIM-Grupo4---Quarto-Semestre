<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- Header com Material Design -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@drawable/gradient_primary"
            app:expandedTitleMarginStart="24dp"
            app:expandedTitleMarginBottom="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/gradient_primary"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ«"
                    android:textSize="48sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Novo Chamado"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descreva seu problema e receba suporte"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:alpha="0.9"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- ConteÃºdo com Scroll -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Card do FormulÃ¡rio -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- TÃ­tulo -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="TÃ­tulo do problema"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:startIconDrawable="@android:drawable/ic_menu_edit"
                        app:counterEnabled="true"
                        app:counterMaxLength="100"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTitulo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapSentences"
                            android:maxLength="100"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- DescriÃ§Ã£o -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="DescriÃ§Ã£o detalhada"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:startIconDrawable="@android:drawable/ic_menu_info_details"
                        app:counterEnabled="true"
                        app:counterMaxLength="500"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDescricao"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minLines="4"
                            android:gravity="top"
                            android:inputType="textMultiLine|textCapSentences"
                            android:maxLength="500"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Categoria -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ Categoria"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:layout_marginBottom="8dp"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/primary"
                        android:layout_marginBottom="20dp">

                        <Spinner
                            android:id="@+id/spinnerCategoria"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:padding="16dp"/>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Prioridade -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="âš¡ Prioridade"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:layout_marginBottom="12dp"/>

                    <RadioGroup
                        android:id="@+id/rgPrioridade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#E8F5E9"
                            android:layout_marginBottom="8dp">
                            <RadioButton
                                android:id="@+id/rbBaixa"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ðŸŸ¢ Baixa - NÃ£o afeta o trabalho"
                                android:textSize="15sp"
                                android:padding="16dp"
                                android:textColor="@color/text_dark"/>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#FFF9C4"
                            android:layout_marginBottom="8dp">
                            <RadioButton
                                android:id="@+id/rbMedia"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ðŸŸ¡ MÃ©dia - Afeta parcialmente"
                                android:textSize="15sp"
                                android:padding="16dp"
                                android:checked="true"
                                android:textColor="@color/text_dark"/>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#FFE0B2"
                            android:layout_marginBottom="8dp">
                            <RadioButton
                                android:id="@+id/rbAlta"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ðŸŸ  Alta - Afeta significativamente"
                                android:textSize="15sp"
                                android:padding="16dp"
                                android:textColor="@color/text_dark"/>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#FFCDD2">
                            <RadioButton
                                android:id="@+id/rbCritica"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ðŸ”´ CrÃ­tica - Sistema parado"
                                android:textSize="15sp"
                                android:padding="16dp"
                                android:textColor="@color/text_dark"/>
                        </com.google.android.material.card.MaterialCardView>

                    </RadioGroup>

                    <!-- BotÃµes -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEnviarChamado"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="ðŸ“¤ ENVIAR CHAMADO"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:cornerRadius="12dp"
                        app:icon="@android:drawable/ic_menu_send"
                        app:iconGravity="textStart"
                        android:backgroundTint="@color/notification_success"
                        android:layout_marginBottom="12dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCancelar"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="âŒ CANCELAR"
                        android:textSize="16sp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:cornerRadius="12dp"
                        app:strokeColor="@color/notification_error"
                        app:strokeWidth="2dp"
                        android:textColor="@color/notification_error"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
