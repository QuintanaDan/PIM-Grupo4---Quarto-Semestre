<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_primary"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📝 Novo Chamado"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descreva seu problema detalhadamente"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:alpha="0.9" />

        </LinearLayout>

        <!-- Formulário -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card principal -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Título -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxStrokeColor="@color/primary"
                        app:hintTextColor="@color/primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTitulo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Título do problema"
                            android:maxLines="2"
                            android:inputType="textCapSentences" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Descrição -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxStrokeColor="@color/primary"
                        app:hintTextColor="@color/primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDescricao"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:hint="Descreva o problema detalhadamente"
                            android:gravity="top|start"
                            android:inputType="textMultiLine|textCapSentences"
                            android:maxLines="6" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Categoria -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Categoria"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/spinnerCategoria"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/spinner_background" />

                    <!-- Prioridade -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Prioridade"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:layout_marginBottom="8dp" />

                    <RadioGroup
                        android:id="@+id/rgPrioridade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <RadioButton
                            android:id="@+id/rbBaixa"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="🟢 Baixa"
                            android:textSize="12sp" />

                        <RadioButton
                            android:id="@+id/rbMedia"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="🟡 Média"
                            android:textSize="12sp"
                            android:checked="true" />

                        <RadioButton
                            android:id="@+id/rbAlta"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="🔴 Alta"
                            android:textSize="12sp" />

                        <RadioButton
                            android:id="@+id/rbCritica"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="🆘 Crítica"
                            android:textSize="12sp" />

                    </RadioGroup>

                    <!-- Informações adicionais -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📞 Telefone para contato"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxStrokeColor="@color/primary"
                        app:hintTextColor="@color/primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTelefone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="(11) 99999-9999"
                            android:inputType="phone" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Botões de ação -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="❌ CANCELAR"
                    android:textColor="@color/text_dark"
                    android:backgroundTint="@color/background_secondary"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                <Button
                    android:id="@+id/btnSalvar"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="💾 CRIAR CHAMADO"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/primary" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
