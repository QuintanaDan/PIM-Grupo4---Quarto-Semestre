<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    tools:context=".HistoricoAuditoriaActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_primary"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📜 Histórico de Auditoria"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Todas as ações registradas no sistema"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:alpha="0.9" />

    </LinearLayout>

    <!-- Contador e Botões -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvContadorAcoes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0 ações registradas"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            tools:text="150 ações registradas" />

        <Button
            android:id="@+id/btnFiltrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🔍 Filtrar"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:backgroundTint="@color/primary"
            android:layout_marginEnd="8dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <Button
            android:id="@+id/btnLimparLogs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🗑️ Limpar"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:backgroundTint="#F44336"
            style="@style/Widget.Material3.Button.OutlinedButton" />

    </LinearLayout>

    <!-- Lista de Auditorias -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAuditoria"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        tools:listitem="@layout/item_auditoria"
        tools:itemCount="10" />

    <!-- Mensagem quando vazio -->
    <TextView
        android:id="@+id/tvMensagemVazio"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="📭\n\nNenhuma ação registrada ainda"
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:visibility="gone" />

</LinearLayout>