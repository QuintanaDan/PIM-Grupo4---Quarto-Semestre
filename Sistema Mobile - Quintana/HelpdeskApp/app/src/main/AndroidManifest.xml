<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HelpdeskApp"
        tools:targetApi="31">

        <!-- ðŸŽ¯ ÃšNICA TELA DE ENTRADA - LoginActivity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ðŸ“± TELAS INTERNAS (sem LAUNCHER) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <activity
            android:name=".AbrirChamadoActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".MeusChamadosActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".DetalhesChamadoActivity"
            android:exported="false"
            android:parentActivityName=".MeusChamadosActivity" />

    </application>
</manifest>
