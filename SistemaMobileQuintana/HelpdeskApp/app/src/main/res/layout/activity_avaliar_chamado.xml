<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_primary"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐"
                android:textSize="48sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Avalie nosso Atendimento"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sua opinião é muito importante!"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:alpha="0.9" />

        </LinearLayout>

        <!-- Conteúdo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card de Avaliação -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Título do Chamado -->
                    <TextView
                        android:id="@+id/tvTituloChamado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chamado: Problema com impressora"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:layout_marginBottom="24dp"
                        android:gravity="center" />

                    <!-- Rating Bar -->
                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="1"
                        android:rating="0"
                        android:layout_gravity="center"
                        android:layout_marginBottom="16dp"
                        style="@style/Widget.AppCompat.RatingBar.Indicator"
                        android:isIndicator="false"
                        android:scaleX="1.5"
                        android:scaleY="1.5" />

                    <!-- Descrição da Avaliação -->
                    <TextView
                        android:id="@+id/tvDescricaoAvaliacao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Selecione uma nota acima"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:layout_marginBottom="24dp" />

                    <!-- Comentário -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="💬 Deixe um comentário (opcional)"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/etComentarioAvaliacao"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:hint="Conte-nos sobre sua experiência..."
                        android:gravity="top|start"
                        android:inputType="textMultiLine|textCapSentences"
                        android:maxLines="5"
                        android:padding="12dp"
                        android:background="@drawable/edit_text_background"
                        android:layout_marginBottom="24dp" />

                    <!-- Botões -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnCancelarAvaliacao"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="❌ CANCELAR"
                            android:textColor="@color/text_dark"
                            android:backgroundTint="@color/background_secondary" />

                        <Button
                            android:id="@+id/btnEnviarAvaliacao"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="⭐ ENVIAR"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/notification_success" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>