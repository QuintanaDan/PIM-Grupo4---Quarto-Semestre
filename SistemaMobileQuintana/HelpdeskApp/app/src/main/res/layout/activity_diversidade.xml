<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".DiversidadeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✊🏿 Consciência e Diversidade"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valorizando a representatividade étnico-racial na tecnologia"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp" />

        <!-- Card: Por que isso importa? -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🎯 Por que isso importa?"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A tecnologia deve refletir a diversidade da sociedade. Pessoas negras representam mais da metade da população brasileira, mas ainda são sub-representadas no setor tech.\n\nEste app celebra e promove a diversidade racial como valor fundamental para a inovação."
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="12dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card: Tema Ancestral -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/gradient_ancestral_card">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="👑 Tema Ancestral"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/ancestral_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Um tema especial que celebra as cores da terra, do ouro e das tradições africanas. Uma homenagem à ancestralidade e à riqueza cultural afrodescendente."
                    android:textSize="14sp"
                    android:textColor="@color/ancestral_text_secondary"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="12dp" />

                <Button
                    android:id="@+id/btnTemaAncestral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✨ Ativar Tema Ancestral"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    style="@style/Widget.Material3.Button" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card: MOVER -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🌍 Conheça a MOVER"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A MOVER é uma organização dedicada a promover diversidade e inclusão no mercado de tecnologia, com foco em pessoas negras.\n\n🎯 Missão: Conectar talentos negros com oportunidades na tech.\n\n🚀 Ações: Programas de capacitação, mentoria e networking."
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="12dp" />

                <Button
                    android:id="@+id/btnConhecerMover"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🌐 Visitar Site da MOVER"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card: Dados -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFF3E0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📊 Você Sabia?"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#6D4C41" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• 56% da população brasileira é negra ou parda\n\n• Apenas 22% dos profissionais de tech são negros\n\n• Empresas diversas são 35% mais lucrativas\n\n• Diversidade gera inovação e melhores soluções"
                    android:textSize="13sp"
                    android:textColor="#5D4037"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="12dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Mensagem Final -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💪🏿 Este aplicativo é um espaço de valorização da diversidade. Cada usuário, independente de sua origem, é parte fundamental desta comunidade."
            android:textSize="13sp"
            android:textColor="?android:attr/textColorSecondary"
            android:textStyle="italic"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>